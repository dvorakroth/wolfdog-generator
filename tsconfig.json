{
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "sourceMap": true,
    "outDir": "./dist",
    "declaration": true,
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "target": "esnext",
    "verbatimModuleSyntax": true,
    "rewriteRelativeImportExtensions": true,
    "lib": ["ESNext"]
  },
  "include": ["src/**/*"]
}
